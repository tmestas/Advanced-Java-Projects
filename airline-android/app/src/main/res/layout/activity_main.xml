<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/airlinemanager"
        android:layout_width="159dp"
        android:layout_height="60dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="200dp"
        android:insetLeft="0dp"
        android:onClick="onAirline"
        android:text="@string/airline_manager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readme"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/readme"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="159dp"
        android:layout_height="60dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="136dp"
        android:onClick="onReadMe"
        android:text="@string/readme"
        app:layout_constraintBottom_toTopOf="@+id/airlinemanager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>